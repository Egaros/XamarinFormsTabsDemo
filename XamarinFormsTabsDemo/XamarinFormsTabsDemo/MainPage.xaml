<?xml version="1.0" encoding="utf-8" ?>
<local:DynamicTabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
                         xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                         xmlns:local="clr-namespace:XamarinFormsTabsDemo"
                         x:Class="XamarinFormsTabsDemo.MainPage">

    <ContentPage Title="First Page"
                 local:DynamicTabbedPage.DefaultIcon="first.png"
                 local:DynamicTabbedPage.SelectedIcon="first_selected.png">
        <Label Text="First Page"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </ContentPage>

    <ContentPage Title="Second Page"
                 local:DynamicTabbedPage.DefaultIcon="second.png"
                 local:DynamicTabbedPage.SelectedIcon="second_selected.png">
        <Label Text="Second Page"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </ContentPage>

    <ContentPage Title="Third Page"
                 local:DynamicTabbedPage.DefaultIcon="third.png"
                 local:DynamicTabbedPage.SelectedIcon="third_selected.png">
        <Label Text="Third Page"
               FontSize="Large"
               HorizontalOptions="Center"
               VerticalOptions="Center" />
    </ContentPage>

</local:DynamicTabbedPage>
